[diff]
	compactionHeuristic = true
	indentHeuristic = true

[core]
	autocrlf = input
	excludesFile = ~/.config/git/ignore
	pager = delta --dark --theme='Monokai Extended'

[alias]
	sw = switch
	unstage = reset HEAD --
	discard = checkout --
	last = log -1 HEAD
	df = diff
	dt = difftool
	lg = log --oneline --graph

[difftool]
	prompt = false

[pull]
	rebase = true

[rebase]
	autoStash = true

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = green
	changed = yellow italic
	untracked = white dim

[include]
  path = ~/.dotfiles/local/gitconfig
